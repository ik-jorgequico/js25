<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
       <record id="destiny_view_move_form" model="ir.ui.view">
            <field name="name">destiny.account.move.form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <div class="oe_button_box" position="inside">
                    <button name="open_destiny_move_view" class="oe_stat_button" icon="fa-bars" type="object" 
                            invisible="destiny_move_count == 0" 
                            string="A. DESTINO"/>
                    <field name="destiny_move_count" invisible="True"/>
                </div>              
            </field>
        </record>
    </data>
</odoo>
